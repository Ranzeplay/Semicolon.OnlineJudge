@model Semicolon.Auth.Models.ViewModels.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<form method="post" asp-action="Register" class="Box Box--spacious mx-auto mt-10 col-6">
    <div class="Box-body">
        <h3 class="f1-light">Register</h3>

        <div class="form-group">
            <div asp-validation-summary="All" class="text-red ml-3"></div>
        </div>

        <div class="form-group">
            <div class="form-group-header">
                <label for="email-addr">Email address</label>
            </div>
            <div class="form-group-body">
                <input class="form-control" type="email" id="email-addr" asp-for="Email" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-group-header">
                <label for="username">User name</label>
            </div>
            <div class="form-group-body">
                <input class="form-control" type="text" id="username" asp-for="UserName" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-group-header">
                <label for="password">Password</label>
            </div>
            <div class="form-group-body">
                <input class="form-control" type="password" id="password" asp-for="Password" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-group-header">
                <label for="confirm-password">Confirm password</label>
            </div>
            <div class="form-group-body">
                <input class="form-control" type="password" id="confirm-password" asp-for="ConfirmPassword" />
            </div>
        </div>

        <button class="btn btn-primary mt-2" type="submit">Submit</button>
        <a asp-action="Login" class="btn btn-link mt-2 ml-3" role="button">Go login</a>
    </div>
</form>
