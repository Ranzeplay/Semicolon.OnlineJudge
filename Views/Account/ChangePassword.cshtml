@model Semicolon.Auth.Models.ViewModels.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}

<div class="pt-4 container-lg clearfix flex-row flex-column">
	<div class="col-3 float-left">
		<partial name="_NavigationPartialView" />
	</div>
	<div class="col-8 float-right">
		<div class="Subhead">
			<div class="Subhead-heading">Change password</div>
		</div>
		<form method="post" class="col-12" asp-action="My">
			<div asp-validation-summary="All" class="text-danger mt-2"></div>

			<div class="form-group">
				<div class="form-group-header">
					<label for="form-horizontal-text">Old password</label>
				</div>
				<div class="form-group-body">
					<input class="form-control input-block" id="form-horizontal-text" type="email" asp-for="OldPassword">
				</div>
			</div>

			<div class="form-group">
				<div class="form-group-header">
					<label for="form-horizontal-text">New password</label>
				</div>
				<div class="form-group-body">
					<input class="form-control input-block" id="form-horizontal-text" type="text" asp-for="NewPassword">
				</div>
			</div>

			<div class="form-group">
				<div class="form-group-header">
					<label for="form-horizontal-text">Confirm new password</label>
				</div>
				<div class="form-group-body">
					<input class="form-control input-block" id="form-horizontal-text" type="text" asp-for="ConfirmNewPassword">
				</div>
			</div>

			<div class="form-actions mt-2">
				<button type="submit" class="btn btn-primary">Save changes</button>
				<a role="button" class="btn" asp-action="My">Cancel</a>
			</div>
		</form>
	</div>
</div>
