@model Semicolon.Auth.Models.ViewModels.Account.DeleteAccountModel
@{
    ViewData["Title"] = "Delete account";
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}

<div class="pt-4 container-lg clearfix flex-row flex-column">
	<div class="col-3 float-left">
		<partial name="_NavigationPartialView" />
	</div>
	<div class="col-8 float-right">
		<div class="Subhead">
			<div class="Subhead-heading">Delete account</div>
		</div>

		<div class="flash-messages mt-2">
			<div class="flash flash-warn">
			<i class="fas fa-exclamation-triangle"></i> <span class="text-bold">Attention</span><br />
			&nbsp;&nbsp;&nbsp;&nbsp; You are going to delete your account, then action can't be undone! <br /> 
			&nbsp;&nbsp;&nbsp;&nbsp; Please check twice before you click the button
			</div>
		</div>

		<form method="post" class="col-12 mt-2" asp-action="Delete">
			<div asp-validation-summary="All" class="text-danger mt-2"></div>

			<div class="form-group">
				<div class="form-group-header">
					<label for="form-horizontal-text">Email address</label>
				</div>
				<div class="form-group-body">
					<input class="form-control input-block" id="form-horizontal-text" type="email" asp-for="Email">
				</div>
			</div>

			<div class="form-group">
				<div class="form-group-header">
					<label for="form-horizontal-text">Password</label>
				</div>
				<div class="form-group-body">
					<input class="form-control input-block" id="form-horizontal-text" type="password" asp-for="Password">
				</div>
			</div>

			<div class="form-actions mt-2">
				<button type="submit" class="btn btn-danger">Confirm deletion</button>
				<a role="button" class="btn" asp-action="My">Cancel</a>
			</div>
		</form>
	</div>
</div>
